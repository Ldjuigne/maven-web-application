pipeline{
  agent any 
  tools {
    maven "maven_3.8.6"
  }  
  stages {
    stage('1GetCode'){
      steps{
        sh "echo 'cloning the latest application version' "
        git 'https://github.com/Ldjuigne/maven-web-application.git'
      }
    }
    stage('3Test+Build'){
      steps{
        sh "echo 'running JUnit-test-cases' "
        sh "echo 'testing must passed to create artifacts ' "
        sh "mvn clean package"
      }
    }
    stage('4CodeQuality'){
      steps{
        sh "echo 'Perfoming CodeQualityAnalysis' "
        sh "mvn sonar:sonar"
      }
    } 
    stage('5uploadNexus'){
      steps{
        sh "mvn deploy"
      }
    }  
    stage('8deploy2prod'){
      steps{
        deploy adapters: [tomcat9(credentialsId: 'tomcat-credentials', path: '', url: 'http://18.234.236.230:8080/')], contextPath: null, war: 'target/*war'    }     
      }
    }
   post{
    always{
      emailext body: '''Hey guys,
Please check build status.
Thanks,
Lidvine Djuigne
+1 240 481 1260''', recipientProviders: [buildUser(), developers()], subject: 'success', to: 'fintechapp@gmail.com'
    }
    success{
      emailext body: '''Hey guys,
Good job. Build and deployment is successful.
Thanks,
Lidvine Djuigne
+1 240 481 1260''', recipientProviders: [buildUser(), developers()], subject: 'success', to: 'fintechapp@gmail.com'
    } 
    failure{
      emailext body: '''Hey guys
Build failed. Please resolve issues.
Thanks
Lidvine Djuigne
+1 240 481 1260''', recipientProviders: [buildUser(), developers()], subject: 'success', to: 'fintechapp@gmail.com'
    }
  }  
}
